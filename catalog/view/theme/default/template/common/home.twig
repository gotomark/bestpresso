{{ header }}
<div id="common-home" class="container">
    <div class="row">
        {{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-lg-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content_right" class="{{ class }}">
          {{ content_top }}
        </div>
        <div id="content" class="col-lg-12">
          {{ content_bottom }}
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}