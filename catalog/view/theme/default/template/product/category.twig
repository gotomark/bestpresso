{{ header }}
<div class="cat_top">
    <div class="container">
        <ul class="breadcrumbs">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
    </div>
    <h1 class="text-center">
        {{ heading_title }}
    </h1>
</div>
<div class="container top_controls">
  <div class="row justify-content-between align-items-center">
      <div class="col-lg-6 page_res">{{ results }}</div>
    <div class="col-lg-3">
        <select id="input-sort" onchange="location = this.value;">
          {% for sorts in sorts %}
            {% if sorts.value == '%s-%s'|format(sort, order) %}
              <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
            {% else %}
              <option value="{{ sorts.href }}">{{ sorts.text }}</option>
            {% endif %}
          {% endfor %}
        </select>
    </div>
  </div>
</div>
<div id="product-category" class="container">
    <div class="row">
        {{ column_left }}
        <div id="content" class="col-lg-9">
            {{ content_top }}

            {% if products %}
                <div class="row">
                    {% for product in products %}
                        <div class="product-layout product-list col-lg-3 col-xs-12">
                            <div class="productbox">
                                <div class="quickview" data-toggle="tooltip" data-original-title="Быстрый просмотр">
                                </div>
                                <button type="button" class="wishlist" data-toggle="tooltip"
                                        title="{{ button_wishlist }}"
                                        onclick="wishlist.add('{{ product.product_id }}');">
                                </button>
                                <button class="credit" type="button" data-toggle="tooltip"
                                        data-original-title="В кредит">
                                </button>
                                <button type="button" class="compare" data-toggle="tooltip" title="{{ button_compare }}"
                                        onclick="compare.add('{{ product.product_id }}');">
                                </button>
                                <div class="sale-text"> {{ product.name_stock_cat }}</div>

                                <div class="product-thumb">
                                    <div class="image">
                                        <a href="{{ product.href }}">
                                            <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="caption">
                                    <div class="category-name">{{ product.name_main_cat }}</div>
                                    <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                                    <div class="additional-row">
                                        {% if product.rating %}
                                            <div class="rating">
                                                {% for i in 1..5 %}
                                                    {% if product.rating < i %}
                                                        <span class="fa fa-stack">
                                                            <i class="fa fa-star-o fa-stack-2x"></i>
                                                        </span>
                                                    {% else %}
                                                        <span class="fa fa-stack star-active">
                                                            <i class="fa fa-star-o fa-stack-2x"></i>
                                                        </span>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        <div class="review-count">{{ product.reviews }}</div>
                                        <div class="sku">{{ product.sku }}</div>
                                    </div>
                                    {% if product.price %}
                                        <p class="price">
                                            {% if not product.special %}
                                                <span class="price-new">{{ product.price }}</span>
                                            {% else %}
                                                <span class="price-new">{{ product.special }}</span>
                                                <span class="price-old">{{ product.price }}</span>
                                                <span class="skidka">{{ product.skidka }}</span>
                                            {% endif %}
                                            {% if product.tax %}
                                                <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                                            {% endif %}
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="button-group">
                                    <button type="button" class="add_to_cart"
                                            onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    {% endfor %} </div>
                <div class="row">
                    <div class="col-lg-12 text-center">{{ pagination }}</div>
                </div>
            {% endif %}
            {% if not categories and not products %}
                <p>{{ text_empty }}</p>
                <div class="buttons">
                    <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a>
                    </div>
                </div>
            {% endif %}
            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
{{ footer }} 
